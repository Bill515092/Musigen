<body>
  <h1>Edit Band</h1>
  <form action="/profile/editBand/<%- bandToUpdate._id %>" method="post">
    <label for="name">Band Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      value="<%- bandToUpdate.name %>"
      style="margin-bottom: 10px"
    /><br />

    <label for="members">Current Band Members:</label>
    <h4
      id="members"
      name="members"
      value="<%- bandToUpdate.members %>"
      style="margin-bottom: 10px"
    >
      <% bandToUpdate.members.forEach(element => { %>
      <option value="<%-element._id%>"><%-element.name%></option>
      <% }) %>
    </h4>
    <br />

    <label for="members">Potential Band Members:</label>
    <select id="members" name="members" style="margin-bottom: 10px">
      <% allMembers.forEach(element => { %>
      <option value="<%-element._id%>"><%-element.name%></option>
      <% }) %>
    </select>
    <select id="members" name="members" style="margin-bottom: 10px">
      <% allMembers.forEach(element => { %>
      <option value="<%-element._id%>"><%-element.name%></option>
      <% }) %>
    </select>
    <select id="members" name="members" style="margin-bottom: 10px">
      <% allMembers.forEach(element => { %>
      <option value="<%-element._id%>"><%-element.name%></option>
      <% }) %>
    </select>
    <select id="members" name="members" style="margin-bottom: 10px">
      <% allMembers.forEach(element => { %>
      <option value="<%-element._id%>"><%-element.name%></option>
      <% }) %>
    </select>
    <br />

    <label for="genre">Genre:</label>
    <input
      type="text"
      id="genre"
      name="genre"
      value="<%- bandToUpdate.genre %>"
      style="margin-bottom: 10px"
    /><br />

    <label for="dateFounded">Date Founded:</label>
    <input
      type="text"
      id="dateFounded"
      name="dateFounded"
      value="<%- bandToUpdate.dateFounded %>"
      style="margin-bottom: 10px"
    /><br />

    <button type="submit">Update Band</button>
  </form>
</body>
