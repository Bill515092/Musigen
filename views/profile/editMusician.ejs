<h1>Edit Musician</h1>
  <form action="/profile/editMusician/<%- musicianToUpdate._id %>" method="post" enctype="multipart/form-data" class="mb-3">
    <label for="name" class="form-label">Name:</label>
    <input type="text" id="name" name="name" value="<%- musicianToUpdate.name %>" style="margin-bottom: 10px" class="form-control"/><br />

    <label for="role" class="form-label">Role:</label>
    <select id="role" name="role" value="<%- musicianToUpdate.role %>" style="margin-bottom: 10px" class="form-control">
      <option value="Vocals">Singer</option>
      <option value="Guitar">Guitarist</option>
      <option value="Bass">Bassist</option>
      <option value="Drums">Drummer</option>
    <br/>

    <label for="yearsOfExperience" class="form-label">Years of Experience:</label>
    <input
      type="number"
      id="yearsOfExperience"
      name="yearsOfExperience"
      value="<%- musicianToUpdate.yearsOfExperience %>"
      style="margin-bottom: 10px"
      class="form-control"
      
    /><br />

    <label for="favouriteGenre" class="form-label">Favorite Genre:</label>
    <input type="text" id="genre" name="favouriteGenre" value="<%- musicianToUpdate.favouriteGenre %>" style="margin-bottom: 10px" class="form-control"/><br />

    <label for="favouriteBand" class="form-label">Favorite Band:</label>
    <input type="text" id="band" name="favouriteBand" value="<%- musicianToUpdate.favouriteBand %>" style="margin-bottom: 10px" class="form-control"/><br />

    <input type="file" name="imageUrl" accept="image/png, image/jpg" />

    <button type="submit" class="btn btn-outline-light">
      Update Profile
    </button>
  </form>
