<div class="signup-page">
  <div class="white-container">
    <h1>Signup</h1>
    <br />
    <div class="signup-container">
      <form
        class="signup-form"
        action="/auth/signup"
        method="post"
        class="mb-3"
      >
        <input
          type="username"
          name="username"
          value="<% if(typeof errorMessage !== 'undefined') { %><%= data.username %><% } %>"
          required="true"
          placeholder="Enter your username"
          class="form-control"
        />
        <input
          type="password"
          name="password"
          value=""
          required="true"
          placeholder="Enter your password"
          class="form-control"
        />

        <input class="btn btn-outline-light" type="submit" value="Signup" />
      </form>
      <a href="/auth/login"
        ><button class="btn btn-outline-light">Go to log in page</button></a
      >

      <% if(typeof errorMessage !== 'undefined') { %>
      <p style="color: red"><%= errorMessage %></p>
      <% } %>
    </div>
  </div>
</div>
